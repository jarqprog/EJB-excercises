<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">


    <!-- General description of your web application -->

    <display-name>jq</display-name>
    <description>
        Application for training purposes (first steps in EJB)
    </description>

        <servlet>
            <servlet-name>HelloServlet</servlet-name>
            <servlet-class>com.jarq.web.HelloServlet</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>HelloServlet</servlet-name>
            <url-pattern>/hello/</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>NumberServlet</servlet-name>
            <servlet-class>com.jarq.web.NumberServlet</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>NumberServlet</servlet-name>
            <url-pattern>/number/</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>SingletonDateServlet</servlet-name>
            <servlet-class>com.jarq.web.SingletonDateServlet</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>SingletonDateServlet</servlet-name>
            <url-pattern>/singletonDate/</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>DateServlet</servlet-name>
        <servlet-class>com.jarq.web.SingletonDateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DateServlet</servlet-name>
        <url-pattern>/date/</url-pattern>
    </servlet-mapping>


    <!-- Define the default session timeout for your application,
         in minutes.  From a servlet or JSP page, you can modify
         the timeout for a particular session dynamically by using
         HttpSession.getMaxInactiveInterval(). -->

    <session-config>
        <session-timeout>30</session-timeout>    <!-- 30 minutes -->
    </session-config>


</web-app>

